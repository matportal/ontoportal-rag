<?xml version="1.0"?>
<rdf:RDF xmlns="http://www.co-ode.org/ontologies/pizza/pizza.owl#"
     xmlns:rdf="http://www.w3.org/1999/02/22-rdf-syntax-ns#"
     xmlns:owl="http://www.w3.org/2002/07/owl#"
     xmlns:xml="http://www.w3.org/XML/1998/namespace"
     xmlns:xsd="http://www.w3.org/2001/XMLSchema#"
     xmlns:rdfs="http://www.w3.org/2000/01/rdf-schema#">
    <owl:Ontology rdf:about="http://www.co-ode.org/ontologies/pizza/pizza.owl">
        <rdfs:comment>A simple ontology about pizzas.</rdfs:comment>
    </owl:Ontology>

    <!-- Classes -->
    <owl:Class rdf:about="http://www.co-ode.org/ontologies/pizza/pizza.owl#Pizza">
        <rdfs:label>Pizza</rdfs:label>
        <rdfs:comment>A dish of Italian origin, consisting of a usually round, flat base of leavened wheat-based dough topped with tomatoes, cheese, and often various other ingredients.</rdfs:comment>
    </owl:Class>

    <owl:Class rdf:about="http://www.co-ode.org/ontologies/pizza/pizza.owl#PizzaTopping">
        <rdfs:label>Pizza Topping</rdfs:label>
        <rdfs:comment>An ingredient that is added to the top of a pizza base.</rdfs:comment>
    </owl:Class>

    <owl:Class rdf:about="http://www.co-ode.org/ontologies/pizza/pizza.owl#MargheritaPizza">
        <rdfs:subClassOf rdf:resource="http://www.co-ode.org/ontologies/pizza/pizza.owl#Pizza"/>
        <rdfs:label>Margherita Pizza</rdfs:label>
        <rdfs:comment>A classic Neapolitan pizza, the Margherita is made with San Marzano tomatoes, mozzarella cheese, fresh basil, salt, and extra-virgin olive oil.</rdfs:comment>
    </owl:Class>

    <owl:Class rdf:about="http://www.co-ode.org/ontologies/pizza/pizza.owl#Tomato">
        <rdfs:subClassOf rdf:resource="http://www.co-ode.org/ontologies/pizza/pizza.owl#PizzaTopping"/>
        <rdfs:label>Tomato</rdfs:label>
    </owl:Class>

    <owl:Class rdf:about="http://www.co-ode.org/ontologies/pizza/pizza.owl#Mozzarella">
        <rdfs:subClassOf rdf:resource="http://www.co-ode.org/ontologies/pizza/pizza.owl#PizzaTopping"/>
        <rdfs:label>Mozzarella</rdfs:label>
    </owl:Class>

    <!-- Properties -->
    <owl:ObjectProperty rdf:about="http://www.co-ode.org/ontologies/pizza/pizza.owl#hasTopping">
        <rdfs:domain rdf:resource="http://www.co-ode.org/ontologies/pizza/pizza.owl#Pizza"/>
        <rdfs:range rdf:resource="http://www.co-ode.org/ontologies/pizza/pizza.owl#PizzaTopping"/>
        <rdfs:label>has topping</rdfs:label>
    </owl:ObjectProperty>

</rdf:RDF>
